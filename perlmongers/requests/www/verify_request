#!/usr/bin/perl

use strict;

use vars qw( $q $id @data $hidden_id );

use CGI;

$q = new CGI;
$id = $q->param('id');

if (! -f ("../../../../data/requests/new/" . $q->param('id')) )
{
&print_id_error;
exit 0
}
else
{
&print_page;
exit 0;
}





